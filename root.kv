#:kivy 2.0.0
#:include templates.kv
#:include add_ingredient_panel.kv
#:include application_info_panel.kv
#:include front_panel.kv
#:include manage_ingredients_panel.kv


RootWidget:


<RootWidget@Widget>:
    front_panel: front_panel
    menu_button: menu_button
    context_menu: context_menu
    manage_ingredients_panel: manage_ingredients_panel
    add_ingredient_panel: add_ingredient_panel
    application_info_panel: application_info_panel
    search_suggestions_box: search_suggestions_box
    debug_button: debug_button

    FrontPanel:
        id: front_panel

    MenuButton:
        id: menu_button

    ContextMenu:
        id: context_menu

    ManageIngredientsPanel:
        id: manage_ingredients_panel

    AddIngredientPanel:
        id: add_ingredient_panel

    ApplicationInfoPanel:
        id: application_info_panel

    SearchSuggestionsBox:
        id: search_suggestions_box

    Button:  # For debugging purposes only!
        id: debug_button
        shown: True   # For hiding and showing the button.
        markup: True
        padding: 5, 12
        text: "[b][size=20dp]Debug Mode"
        on_release: import pdb; pdb.set_trace()
