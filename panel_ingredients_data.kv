#:include rd_templates.kv


# repetative code @ panel_applicatoin_info.kv
<CustomLabel@MyLabel>:
    text_size: self.width, None
    halign: 'center'
    padding: dp(20), dp(0)


<ReturnButton@Button>:
    shown: False  # For hiding and showing the button.
    markup: True
    text: "[b][size=16dp]Return.."
    padding: 0, 15
    on_release: self.parent.ingredients_data_panel.toggle_page()
    # Other attributes are set or updated at "main.py" > "AlchemyBooklet" >
    # "_post_update".


<AddIngredientButton@Button>:
    shown: False  # For hiding and showing the button.
    markup: True
    text: '[b][size=16dp]Add Custom Ingredient'
    padding: 0, 10
    on_release: print('Button Triggerd | Add Custom Ingredient')
    # Other attributes are set or updated at "main.py" > "AlchemyBooklet" >
    # "_post_update".


<IngredientsDataPanel>:
    shown: False   # For hiding and showing the page.
    # Other attributes are set or updated at "main.py" > "AlchemyBooklet" >
    # "_post_update".

    panel_grid: panel_grid

    canvas.before:
        Color:
            rgb: 48/255, 48/255, 48/255

        Rectangle:
            size: self.size
            pos: self.pos

    MyGrid:
        id: panel_grid

        CustomLabel:
            text: "[b][size=24dp]Ingredients Database"
            padding: 0, 10
