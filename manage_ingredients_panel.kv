<ReturnButton@Button>:
    shown: False  # For hiding and showing the button.
    markup: True
    text: "[b][size=16dp]Return.."
    padding: 0, 15
    on_release: self.parent.manage_ingredients_panel.toggle_panel()


<AddCustomIngredientButton@Button>:
    shown: False  # For hiding and showing the button.
    markup: True
    text: '[b][size=16dp]Add Custom Ingredient'
    padding: 0, 10
    on_release: self.parent.add_ingredient_panel.toggle_panel()


<ManageIngredientsPanel>:
    panel_grid: panel_grid

    MyGrid:
        id: panel_grid

        MyLabel:
            text_size: self.width, None
            halign: 'center'
            text: "[b][size=24dp]Ingredients Database"
            padding: 0, 10
